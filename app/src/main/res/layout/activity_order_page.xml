<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_page">

    <TextView
        android:layout_width="match_parent"
        android:text="View All order details"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/view_order_textview"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_order_layout"
    android:layout_width="match_parent"
    android:layout_below="@id/view_order_textview"
    android:layout_height="match_parent"
    tools:listitem="@layout/row_layout_orderpage">
</android.support.v7.widget.RecyclerView>

</RelativeLayout>